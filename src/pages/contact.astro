---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact">
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-primary mb-8 text-center">Contact Us</h1>
      <div class="max-w-md mx-auto text-center">
        <p class="text-gray-600 mb-6">
          Ready to get started? Reach out to discuss your web or IT needs.
        </p>
        <a
          href="mailto:chris@carolinacoastit.com"
          class="inline-block bg-secondary text-white px-6 py-3 rounded-lg font-semibold hover:bg-yellow-600 transition"
        >
          Email Us
        </a>
        <p class="mt-4 text-gray-600">
          We'll respond promptly to your inquiry at <a href="mailto:chris@carolinacoastit.com" class="text-primary hover:underline">chris@carolinacoastit.com</a>.
        </p>
      </div>
    </div>
  </section>
</MainLayout>