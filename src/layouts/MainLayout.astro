---
const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Default meta description if none is provided
const metaDescription = "Carolina Coast IT offers professional web design and IT services for small businesses and residents. Specializing in custom websites, SEO, and senior tech support in the Carolina Coast area.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Carolina Coast IT</title>
    <meta name="description" content={metaDescription} />
    <!-- Verify favicon.ico exists in public/ -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <!-- Load Inter font with font-display: swap -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <!-- Verify this path maps to src/styles/global.css -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-gradient-to-b from-primary to-gradientEnd">
    <Header />
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>